@model EntityLayer.Concrete.Admin

@{
    Layout = null;
}

<html lang="en">
<head>
    <title>Giriş Yap</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <link href="~/login-form-19/css/style.css" rel="stylesheet" />
</head>
<body>
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 text-center mb-5">
                    <h2 class="heading-section">Admin Girişi</h2>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-4">
                    <div class="login-wrap py-5">
                        <div class="img d-flex align-items-center justify-content-center" style="background-image: url(/login-form-19/images/bg.jpg);"></div>
                        <h3 class="text-center mb-0">HOŞ GELDİNİZ</h3>
                        <p class="text-center">Aşağıdaki alanları doldurarak giriş yapınız.</p>
                        @using (Html.BeginForm("Index", "Login",FormMethod.Post))
                        {

                        <div class="form-group">
                            <div class="icon d-flex align-items-center justify-content-center"><span class="fa fa-user"></span></div>
                          

                            @Html.TextBoxFor(x => x.AdminUserName, new { @class = "form-control" })
                            @*@Html.ValidationMessageFor(x=>x.AdminUserName)*@
                            @*<input type="text" name="AdminUserName" class="form-control" placeholder="Kullanıcı Adı" >*@
                        </div>
                        <div class="form-group">
                            <div class="icon d-flex align-items-center justify-content-center"><span class="fa fa-lock"></span></div>

                            @Html.TextBoxFor(x => x.AdminPassword, new { @class = "form-control" })
                            @*@Html.ValidationMessageFor(x => x.AdminPassword)*@
                            @ViewBag.hata
                            @*<input type="password" name="AdminPassword" class="form-control" placeholder="Şifre" >*@
                        </div>
                            <div class="form-group d-md-flex">
                                <div class="w-100 text-md-right">
                                    <a href="#">Şifremi Unuttum</a>
                                </div>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn form-control btn-primary rounded submit px-3">Giriş Yap</button>
                               
                            </div>
                        }

                        <div class="w-100 text-center mt-4 text">
                            <p class="mb-0">Hesabın Yok mu?</p>
                            <a href="#">ANA SAYFAYA DÖN</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <script src="js/jquery.min.js"></script>
    <script src="js/popper.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="js/main.js"></script>
</body>
</html>